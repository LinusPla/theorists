<div class="container">
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://hbr.org/resources/images/article_assets/2020/07/Jul20_30_FraziskaBarczyk-1024x576.jpg)">
    <h1><%= @theorist.stage_name %></h1>
  </div>
</div>
<div class="container theorist-show-card">
    <div class="profile">
    <h2 class="name"><%= @theorist.stage_name %></h2>
    <div class = d-flex>
      <img src=<%="https://i.pravatar.cc/150?img=#{@theorist.photonum.to_i}"%> alt="" class="rounded-circle">
      <br>
      <div class="details p-2">
        <p><%= @theorist.stage_name %> focuses mainly on <%= @theorist.main_theory %>.</p>
        <br>
        <%= link_to "link to theory", @theorist.sources, class: "btn btn-flat" %>
      </div>
      <br>
    </div>
  </div>
  <div class="booking-form">
    <h3>book <%= @theorist.stage_name %> here:</h3>
    <br>
    <%= render "bookings/form", locals: {theorist: @theorist, booking: @booking} %>
  </div>
</div>

