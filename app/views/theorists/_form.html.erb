<%= simple_form_for(theorist) do |f| %>
  <%= f.input :stage_name, placeholder: "" %>
  <%= f.input :main_theory, placeholder: "" %>
  <%= f.input :sources, placeholder: "" %>
  <%= f.input :price, hint: "in equivalent EUR" %>
  <%= f.input :location, hint: "It can't be the Moon, because that one does not exist" %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: "btn btn-flat"%>
<% end %>
